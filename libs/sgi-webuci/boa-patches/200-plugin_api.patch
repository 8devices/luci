+int plugin_init(char *path)
+{
+	int buflen = 128;
+	char *plugindir;
+	glob_t g;
+	char *s;
+	int i;
+
+	s = malloc(strlen(path) + sizeof(WILDCARD_SUFFIX) + 1);
+	strcpy(s, path);
+	strcat(s, WILDCARD_SUFFIX);
+	glob(s, GLOB_MARK, NULL, &g);
+	free(s);
+
+	for (i = 0; i < g.gl_pathc; i++)
+		plugin_load(g.gl_pathv[i], path);
+
+	globfree(&g);
+}
